{
    "compilerOptions": {
        "target": "ESNext",
        "useDefineForClassFields": true,
        "module": "ESNext",
        "baseUrl": ".",
        "allowJs": true,
        "checkJs": true,
        "removeComments": true,
        "strict": false,
        "forceConsistentCasingInFileNames": true,
        "typeRoots": ["src/**/*.d.ts"]
    },
    "include": [
        "src/**/*.d.ts",
        "src/**/*.ts",
        "src/**/*.js",
        "src/**/*.svelte"
    ],
    "references": [
        {
            "path": "./tsconfig.node.json"
        }
    ]
}